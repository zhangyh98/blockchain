#!/bin/sh
### BEGIN INIT INFO
# Provides:          chain
# Short-Description: chain server
# Description:      block-chain based server 
#                     
#                  
### END INIT INFO

# Quick start-stop-daemon example, derived from Debian /etc/init.d/ssh
set -e

#!/bin/bash
install_dir=/usr/local/buchain
script_dir=/usr/local/buchain/scripts


NAME=chain
PIDFILE=$script_dir/$NAME.pid
#This is the command to be run, give the full pathname
DAEMON=$install_dir/bin/chain
DAEMON_OPTS=""

export PATH="${PATH:+$PATH:}/usr/sbin:/sbin"

start(){
        echo "Starting "$NAME "..."
		ulimit -c unlimited
		ulimit -n 655350
		echo "${install_dir}/coredump/core.%p.%u.%g.%s.%t.%e"> /proc/sys/kernel/core_pattern 
	    $script_dir/start-stop-daemon -S --oknodo --background  -m -p $PIDFILE --exec $DAEMON -- $DAEMON_OPTS
        echo "."
}

stop(){
        echo "Stopping "$NAME "..."
	    $script_dir/start-stop-daemon --stop --oknodo -p $PIDFILE
        echo "."
}
status(){
	var=$(ps -ef|grep -w $DAEMON |grep -v grep | wc -l);	
	if [ $var != 0 ];
	then
	echo "chain is running";
	else
	echo "chain is not running";
	fi
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart)
		stop 
		start
	;;
  status)
	status
	;;
  *)
	echo "Usage: "$1" {start|stop|restart|status}"
	exit 1
esac

exit 0
